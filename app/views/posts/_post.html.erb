<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
    <p>posted by <%= link_to post.user.name, user_path(post.user) %> </p>
  </p>
  <p>
    <strong>Views:</strong>
    <%= pluralize(post.views, "view") %>
  </p>
  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>
</div>
